#:kivy 1.0

<ScreenManager>:
    playernum: int(1)
    SplashScreen:
        id: splashscreen
        name: 'splashscreen'
        BoxLayout:
            orientation: 'vertical'
            Image:
                source: 'logo.png'
                size_hint: (1, 0.7)
            Button:
                text: 'Start'
                size_hint: (1, 0.3)
                font_size: 50
                background_normal: ''
                background_color: (0.1, 1, 0.1, 0.5)
                on_press: root.current = 'startgame'

    StartGameScreen:
        id: startgame
        name: 'startgame'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: choose_players_label
                text: 'Choose the number of players:'
                font_size: 30
                size_hint: 1,0.4
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1,0.3
                Button:
                    id: down_button
                    text: 'v'
                    size_hint_x: 0.3
                    font_size: 60
                    on_press: app.decrease_number()
                Label:
                    id: num_players_label
                    text: str(app.playernum)
                    size_hint_x: 0.4
                    font_size: 50
                Button:
                    id: up_button
                    text: '^'
                    size_hint_x: 0.3
                    font_size: 70
                    on_press: app.increase_number()
            Button:
                text: 'GO'
                background_normal: ''
                background_color: (0.1, 1, 0.1, 0.5)
                size_hint: 1,0.3
                font_size: 50
                on_press: app.init_wagerscreen(); root.current = 'wagerscreen'
    
    WagerScreen:
        id: wagerscreen
        name: 'wagerscreen'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                id: players
                size_hint_y: 0.8
                orientation: 'horizontal'
            Button:
                id: go_button
                text: 'Submit Wagers'
                size_hint_y: 0.2
                font_size: 30
                on_press: app.init_table(); root.current = 'player1'

    EndGameScreen:
        id: endgamescreen
        name: 'endgamescreen'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                id: dealerhand
                orientation: 'horizontal'
                size_hint_y: 0.4
                Label:
                    text: 'Dealer Hand:'
                    font_size: 20
                    size_hint_x: 0.2
            BoxLayout:
                id: playerresults
                orientation: 'horizontal'
                size_hint_y: 0.4
            Button:
                text: 'New Game'
                font_size: 30
                size_hint_y: 0.2
                on_press: app.new_game(); 
                on_release: root.current = 'wagerscreen'

<PlayerWager>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: f'Player {root.playernum}'
            size_hint_y: 0.2
            font_size: 30
        Button:
            text: '^'
            size_hint_y: 0.3
            font_size: 70
            on_press: root.wager += 1
        Label:
            text: str(root.wager)
            size_hint_y: 0.2
            font_size: 40
        Button:
            text: 'v'
            size_hint_y: 0.3
            font_size: 50
            on_press: root.decrease_wager()

<PlayerResult>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: f'Player {root.playernum}'
            font_size: 20
        Label:
            text: root.result
            font_size: 20

<Player>:
    id: playerscreen
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: money
            orientation: 'horizontal'
            size_hint_y: 0.2
            Label:
                text: f"Player {root.player_num}"
                font_size: 20
            Label:
                id: playermoneylabel
                text: f"Credits: {root.wallet}"
                font_size: 20
            Label:
                id: playerwagerlabel
                text: f"Wager: {root.wager}"
                font_size: 20
        BoxLayout:
            id: hand_layout
            size_hint_y: 0.5
        BoxLayout:
            size_hint_y: 0.3
            Button:
                text: 'Prev player'
                on_press: app.prev_player()
            Button:
                id: hit
                text: 'Hit'
                font_size: 25
                bold: True
                background_normal: ''
                background_color: (0, 1, 0, 0.7)
                on_press: root.action_btns_state(False)
                on_release: app.action('h', root.player_num)
            Button:
                id: stand
                text: 'Stand'
                font_size: 25
                bold: True
                background_normal: ''
                background_color: (1, 0, 0, 0.8)
                on_press: root.action_btns_state(False)
                on_release: app.action('s', root.player_num)
            Button:
                id: split
                text: 'Split'
                font_size: 25
                bold: True
                background_normal: ''
                background_color: (0, 0, 1, 0.8)
                on_press: root.action_btns_state(False)
                on_release: app.action('p', root.player_num)
            Button:
                id: double
                text: 'Double'
                font_size: 25
                bold: True
                background_normal: ''
                background_color: (0.9, 0.6, 0.3, 1)
                on_press: root.action_btns_state(False)
                on_release: app.action('d', root.player_num)
            Button:
                id: surrender
                text: 'Surrender'
                font_size: 25
                bold: True
                background_normal: ''
                background_color: (0.7, 0.05, 0.2, 1)
                on_press: root.action_btns_state(False)
                on_release: app.action('l', root.player_num)
            Button:
                text: 'next player'
                on_press: app.next_player()
            